{
  "name": "begin_react_workshop",
  "version": "0.0.1",
  "description": "resources for weekend react workshop",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "browserify -t babelify src/js/main.jsx -o build/js/main.js",
    "build:watch": "watchify src/js/main.jsx -t babelify -o build/js/main.js",
    "lint": "eslint **/*.jsx",
