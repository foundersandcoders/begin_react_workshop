    "serve": "http-server -s",
    "test": "mocha test/components"
  },
  "author": "MIJOTHY",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^10.2.1",
    "babel": "^5.4.7",
    "babelify": "^6.1.2",
    "babel-eslint": "^3.1.10",
    "eslint": "^0.22.1",
    "http-server": "^0.8.0",
    "jsdom": "^5.4.3",
    "live-reload": "^1.1.0",
    "mocha": "^2.2.5",
    "watchify": "^3.2.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  }
}
